<h1 class="mt-2 ms-2"><%= @list.name %></h1>
<hr class="mt-0 mb-2">
<div class="d-flex justify-content-end me-4">
  <%= link_to "Add movie to list", new_list_bookmark_path(@list), class: "btn btn-success"  %>
</div>
<div class="container">


  <% @list.bookmarks.all.each do |bookmark| %>
    <div class="card w-50 mb-3 p-2 shadow-sm">
      <h3><%= bookmark.movie.title %></h3>
      <p><%= bookmark.comment %></p>
    </div>
  <% end %>
  <%= link_to "Back", root_path, class: "btn btn-primary" %>
</div>
