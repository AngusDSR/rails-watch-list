<div class="d-flex align-items-center px-3">
  <h1 class="col-2-md mt-2 ms-2"><b>My lists</b></h1>
  <p class="flex-grow-1"></p>
  <%= link_to "Create a new list", new_list_path, class: "btn btn-success" %>
</div>
<hr class="mt-0">
<div class="container">
<div class="container">
  <div class="d-flex justify-content-end me-4">
  </div>
  <div class="container">
    <% @lists.each do |list| %>
      <div class="card w-50 mb-3 p-2 pb-0 shadow-sm">
        <h3><%= link_to list.name, list_path(list), class: "text-decoration-none text-dark" %></h3>
      </div>
    <% end %>
  </div>
</div>
