<h1>Lists</h1>
<hr>
<div class="container">
  <div class="d-flex justify-content-end me-4">
    <%= link_to "Create a new list", new_list_path, class: "btn btn-success" %>
  </div>
  <div class="container">
    <% @lists.each do |list| %>
      <div class="card w-50 mb-3 p-3">
        <%= link_to list.name, list_path(list), class: "fs-3 fw-bold text-decoration-none text-dark" %>
      </div>
    <% end %>
  </div>
</div>
